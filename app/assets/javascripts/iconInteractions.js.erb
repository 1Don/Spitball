//Toggles reply tree on and off
function toggleReply(id) {
	var reply = document.getElementById('reply-' + id);
	if (reply.style.display == "block") {
		reply.style.display = "none";
	} else {
		$('.reply-hide').css("display", "none");
		reply.style.display = "block";
	}
}

