<div class="form-group small">
      <div class="text-center">
        <%= form_for @discussion, html: { multipart: true } do |f| %>
            <%= f.label :category %>
            <%= f.select :category,
                        options_for_select(
                          [
                            "Fundraising",
                            "Prototyping and Testing",
                            "Marketing",
                            "Teambuilding",
                            "Legal",
                            "Industry Related",
                            "Other"
                            ]
                        ),
                        {},
                        class: 'form-control form-control-sm' %>
      </div>


  <div class="form-group text-center">
    <%= f.label :title, "Your Question" %><span data-toggle="tooltip" data-placement="right" title="What do you want to ask?"class="pl-1 question-marker-ps"><%= fa_icon('question') %></span>
    <%= f.text_field :title, class: 'form-control form-control-sm', id: "focus-field"  %>
  </div>

  <div class="form-group text-center">
    <%= f.label :content, "Description" %><span data-toggle="tooltip" data-placement="right" title="Provide additional context or an explanation if needed."> <%= fa_icon('question') %></span>
    <%= f.text_area :content, class: 'form-control form-control-sm', style: "resize: none;", :rows => 8 %>
  </div>
  <div class="">
    <div class="">
      <!-- I want to use logo's text inside of button -->
      <%= f.submit "Ask", class: "wadnewbutton d-none d-md-block mx-auto" %>
      <%= f.submit "Ask", class: "wadnewbutton mx-auto d-block d-sm-none" %>
    </div>
  </div>
<% end %>
