<div class="col-12 mt-4">
	<div class="row">

		<div class="col-4 d-none d-md-block mt-4">
			<%= render "discussions/sidebar" %>
		</div>

		<div class="col-xs-12 col-sm-12 col-md-8 mb-5">
			<div class="col-md-12 col-xs-12  col-sm-12 align-items-center mb-4 row-flex">
				<span class="h2"> 
					Spread the Knowledge 
			   </span>
					<%= link_to new_discussion_path do %>
			   			 <button class="newbutton mt-4 shadow-sm small">Question?</button>
					<% end %>
				</div>

	
	<div class="col-md-12 col-sm-12 col-xs-12">
			<div class="card">
				<div class="card-header">
				<h4>Questions</h4>
			</div>
				<div class="list-group list-group-flush">
					<%= render "all_discussions" %>
				</div>

				<div class="card-footer text-center d-none">
					See all
				</div>
			</div>
			</div>
		</div>
