<div onmouseover='showTrash("<%= @discussion.id %>")' onmouseleave='hideTrash("<%= @discussion.id %>")' class="card col-12 mb-3">
	<div class="card-body">
		<div class="row">
			<div class="col-3 text-center">
		      	<%= link_to user_path(@discussion.user), class: "profile-link" do %>
		      		<%= image_tag @discussion.user.photo.url(:thumb), class: "img-fluid" %>
				<% end %>
			</div>	
		
		<div class="col-9 col-md-6">
			<div class="col-9 small mt-3">
				<%= @discussion.content %>
			</div>
		</div>
	</div>

	<div class="card-body row">

		<div class="col-4 text-left">
			@<%= link_to @discussion.user.name, user_path(@discussion.user), class: "profile-link" %> 
		</div>
		
	<%= render 'discussions/actions', discussion: @discussion %>


	</div>
</div>


