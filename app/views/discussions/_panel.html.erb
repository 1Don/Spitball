<div class="card mb-3">
	<div class="card-body">
		<div class="row">
			<div class="col-3 text-center">
		      	<%= link_to user_path(@discussion.user), class: "profile-link" do %>
		      		<%= image_tag @discussion.user.photo.url(:thumb), class: "img-fluid" %>
					<%= @discussion.user.name %> 
				<% end %>
			
			</div>	
		
		
		<div class="col-9 col-md-6">
			<%= @discussion.content %>

		</div>
		</div>



		
</div>




