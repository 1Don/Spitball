<% content_for :sub_layout do %>
<div class="row">
	<div class="col-md-3 mt-5 d-none d-sm-block">
		<%= render 'wads/sidebar' %>
	</div>
	<div class="col-md-7 col-xs-12 mt-4">
		<%= yield %>
	</div>
	<div class="col-md-2 mt-5 d-none d-sm-block">
		<%= render 'wads/news&notifications' %>
	</div>
</div>
<div class="pop bottom-right mr-3 mb-3">
	<button class="circular-btn pointer" type='button' data-toggle='modal' data-target='#myModal'>
		<%= fa_icon('plus-square 2x') %><!---make this slide on mouseover/hover --->
	</button>
</div>
<% end %>

<%= render template: 'layouts/application' %>
