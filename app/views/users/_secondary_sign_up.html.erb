 <div class="col-md-10 mx-auto mt-5 h-100">
    <%= form_for @user, html: { multipart: true } do |f| %>
    <h5 class="text-center mt-3 small font-italic">Other optional info</h5>
      <div class="mt-4">

        <div class="row">
           <div class="form-group col-12">
            <%= f.text_field :occupation, placeholder: "Occupation", class: 'form-control' %>
          </div>
        </div>

        <div class="row">
           <div class="form-group col-12">
            <%= f.text_field :location, placeholder: "Location", class: 'form-control' %>
          </div>
        </div>

        <div class="row">
          <div class="form-group col-12">
            <%= f.text_field :interests, placeholder: "Interests seperated by (', ')", multiple: true, class: 'form-control' %>
          </div>
        </div>

        <div class="row">
           <div class="form-group col-6">
              <%= f.text_field :twitter, placeholder: "Twitter Handle", class: 'form-control d-inline-block' %>
          </div>

          <div class="form-group col-6">
            <%= f.text_field :github, placeholder: "GitHub Username", class: 'form-control' %>
          </div>
        </div>

        <div class="row">
          <div class="form-group col-7">
            <%= f.text_field :linkedin, placeholder: "LinkedIn Profile Link", class: 'form-control' %>
          </div>

          <div class="form-group col-5">
            <%= f.file_field :photo, class: 'form-control-file' %>
          </div>
        </div>

        <div class="row">
           <div class="form-group col-12 text-center"> 
              <%= f.submit class: "btn btn-primary" %>
           </div>
        </div>

      </div>
   <% end %>
 </div>