<div class="row">
  <div class="col-12 mb-3">
    <div class="jumbotron">
      <h5 class="display-5">
        <div class="row">

          <div class="col-2">
            <%= image_tag @user.photo.url(:thumb) %>
          </div>
          <div class="col-6">
            <p>
              <%= @user.first_name %> <%= @user.last_name %> - Entreprenuer
            </p>
            <p class="small">
              @<%= @user.name %> &lt;<%= @user.email %>&gt;
            </p>
          </div>
          <div class="col-4">
            <% if @user.location.present? %>
              <%= fa_icon("map-marker th", text: @user.location) %> <br>
            <% end %>
            <% if @user.twitter.present? %>
              <%= link_to fa_icon("twitter", text: username_from_url(@user.twitter)), @user.twitter %> <br>
            <% end %>
            <% if @user.linkedin.present? %>
              <%= link_to fa_icon("linkedin", text: username_from_url(@user.linkedin)), @user.linkedin %> <br>
            <% end %>
            <% if @user.github.present? %>
              <%= link_to fa_icon("github", text: username_from_url(@user.github)), @user.github %>
            <% end %>
          </div>
        </div>
      </h5>

    </div>
  </div>

  <div class="d-none d-md-flex col-12">
    Juice Meter: <%= render 'users/progressbar' %>
  </div>
</div>
