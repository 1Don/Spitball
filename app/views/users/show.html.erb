<% provide(:title, @user.name) %>
<div class="row">
	<div class="col-md-12 mx-auto col-12">
		<%= render 'users/user_profile_header' %>

		<ul class="nav nav-tabs text-profile" id="profile-tab" role="tablist">
		  <li class="nav-item">
		    <a class="nav-link active" id="responses-tab" data-toggle="tab" href="#responses" role="tab" aria-controls="responses" aria-selected="true">Responses</a>
		  </li>
		  <li class="nav-item">
		    <a class="nav-link" id="wads-tab" data-toggle="tab" href="#wads" role="tab" aria-controls="wads" aria-selected="false">Wads</a>
		  </li>
		  <li class="nav-item">
		    <a class="nav-link" id="questions-tab" data-toggle="tab" href="#questions" role="tab" aria-controls="questions" aria-selected="false">Questions</a>
		  </li>
		</ul>
		<div class="tab-content" id="profile-tab-content">
		  <div class="tab-pane fade show active" id="responses" role="tabpanel" aria-labelledby="responses-tab">
				<% @user.comments.each do |comment| %>
					<div class="list-group-item">
						<div class="row">
							<div class="col-4">
							  <%= image_tag comment.wad.image.url(:thumb), class: "img-fluid" %>
							</div>
							<div class="col-8">
								<%= comment.content %>
							</div>
						</div>
					</div>
				<% end %>
		  </div>
		  <div class="tab-pane fade" id="wads" role="tabpanel" aria-labelledby="wads-tab">
		    <%= render @user.wads %>
		  </div>
		  <div class="tab-pane fade" id="questions" role="tabpanel" aria-labelledby="questions-tab">
				<% @user.comments.where.not(parent_id: nil).each do |comment| %>
					<div class="list-group-item">
						<div class="row">
							<div class="col-4">
							  <%= image_tag comment.wad.image.url(:thumb), class: "img-fluid" %>
							</div>
							<div class="col-8">
								<%= comment.content %>
							</div>
						</div>
					</div>
				<% end %>
		  </div>
		</div>

	</div>
</div>
