<% provide(:title, @user.name) %>
<div class="row">


<div class ="col-md-2 d-none d-md-block">
	<%= render 'wads/sidebar' %>
</div>


	<div class="col-md-8 mx-auto col-12 mt-3 mobile-space">
		<%= render 'users/user_profile_header' %>

		<ul class="nav nav-tabs text-profile" id="profile-tab" role="tablist">
		  <li class="nav-item">
		    <a class="nav-link" id="wads-tab" data-toggle="tab" href="#wads" role="tab" aria-controls="wads" aria-selected="false">Wads</a>
		  </li>		 
		  <li class="nav-item">
		    <a class="nav-link active" id="responses-tab" data-toggle="tab" href="#responses" role="tab" aria-controls="responses" aria-selected="true">Comments</a>
		  </li>
		  <li class="nav-item">
		    <a class="nav-link" id="questions-tab" data-toggle="tab" href="#questions" role="tab" aria-controls="questions" aria-selected="false"> Questions</a>
		  </li>
		  <li class="nav-item">
		    <a class="nav-link" id="likes-tab" data-toggle="tab" href="#likes" role="tab" aria-controls="likes" aria-selected="false">Likes</a>
		  </li>		  
		</ul>
		<div class="tab-content" id="profile-tab-content">
		  <div class="tab-pane fade show active" id="responses" role="tabpanel" aria-labelledby="responses-tab">
				<% @user.comments.each do |comment| %>
					<div class="list-group-item">
						<div class="row">
							<div class="col-4">
							  <%= image_tag comment.wad.image.url(:thumb), class: "img-fluid" %>
							</div>
							<div class="col-8">
								<%= comment.content %>
							</div>
						</div>
					</div>
				<% end %>
		  </div>
		  <div class="tab-pane fade" id="wads" role="tabpanel" aria-labelledby="wads-tab">
		    <%= render @user.wads %>
		  </div>
		  <div class="tab-pane fade" id="questions" role="tabpanel" aria-labelledby="questions-tab">
				<% @user.discussions.each do |disc| %>
					<div class="list-group-item">
						<div class="row">
							<div class="col-4">
							  <%= image_tag disc.user.photo.url(:thumb), class: "img-fluid" %>
							</div>
							<div class="col-8">
								<%= disc.content %>
							</div>
						</div>
					</div>
				<% end %>
		  </div>
			<div class="tab-pane fade" id="likes" role="tabpanel" aria-labelledby="likes-tab">
				<% @wads.each do |wad| %>
					<% if @user.voted_for? wad %>
						<%= render wad %>
					<% end %>
				<% end %>
			</div>
		</div>

	</div>
</div>
