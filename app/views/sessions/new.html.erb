<div class="col-12 mt-5">
  <% provide(:title, "Log in") %>
  <h3 class="text-center mb-4">Log in to Spitball</h3>

  <div class="row">
    <div class="col-md-6 mx-auto">
      <%= form_for(:session, url: sessions_path) do |f| %>

        <div class="form-group">
          <%= f.email_field :email, placeholder: "Email", class: "form-control comment-reply-form border-bottom placeHolder" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, placeholder: "Password", class: "form-control comment-reply-form border-bottom placeHolder" %>        <%= link_to  "Forgot Your Password?", new_password_reset_path, class:"profile-link" %>
        </div>

        <div>
          <div class="text-center">
            <%= f.label :remember_me, class: "checkbox inline" do %>
              <%= f.check_box :remember_me %>
              <span>Remember me on this computer</span> 
            <% end %>
          </div>
        </div>
        
          <div class="text-center">
            <%= f.submit "Log in", class: "Spitballbutton" %>
          </div>

     

       
      <% end %>
      <div class="row mt-3">
        <div data-toggle="modal" data-target="#myModal" class="border-right pointer my-2 col-6 text-center br-5">
          <span class="d-none d-sm-block">Sign in with: <%= fa_icon('twitter') %> | <%= fa_icon('linkedin') %> | <%= fa_icon('google') %></span>
          <span class="d-block d-sm-none small">Sign in with: <%= fa_icon('twitter') %> | <%= fa_icon('linkedin') %> | <%= fa_icon('google') %></span>
        </div>
        <div class="col-6">
          <p class="mt-2 text-center">
            <span class="d-none d-sm-block">New user? <%= link_to "Sign up now!", new_user_path %></span>
            <span class="d-block d-sm-none small">New user? <%= link_to "Sign up now!", new_user_path %></span>
          </p>
        </div>
      </div>
    </div>
  </div>
  <%= render 'static_pages/landing_modal' %>
</div>
