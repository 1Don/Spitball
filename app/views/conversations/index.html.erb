<div id="message-view" class="">
<% @conversations.each do |convo| %>
  <div id="<%= convo.id %>" class="tabcontent conversations-message w-100 index-<%= convo.id %> convo-<%= convo.id %> bg-danger">
    <% convo.messages.order("created_at").each do |message| %>
      <% if message.user != current_user %>
        <div class="small ml-1 w-100 row col-12">
          <div class="col-1 mr-4">
            <% unless !message.user.photo.attached? %><%= image_tag message.user.photo, class: "circle-larry" %><% end %>
          </div>
          <div class="col-9">
            <b><%= message.user.name %></b><br>
            <span class="date-text small"><%= message.created_at.strftime("%A at %I:%M %p") %></span><br>
            <%= message.body %>
          </div>
        </div><br>
      <% else %>
      <div class="ml-5 small w-100 row float-right">
        <div class="col-9">
          <b class="float-right">
            <%= message.user.name %>
          </b><br>
          <span class="date-text small float-right">
            <%= message.created_at.strftime("%A at %I:%M %p") %>
          </span><br>
          <span class="float-right">
            <%= message.body %>
          </span>
        </div>
        <div class="col-1 pl-0">
          <% unless !message.user.photo.attached? %><%= image_tag message.user.photo, class: "circle-larry" %><% end %>
        </div>
      </div>
      <% end %><br><br><br>
    <% end %>
    </div>
<% end %>
</div>
<div class="message-bar">
    <%= render 'conversations/messagebar' %>
</div>
