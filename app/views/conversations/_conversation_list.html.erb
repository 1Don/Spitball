<div class="card-body">
	<div class="">
		<% @conversationalists.each do |user| %>
			<%= link_to conversation_messages_path(:conversation_id => Conversation.between(user.id, current_user.id)[0].id), class: "profile-link " do %>
				<div class="border-bottom">
					<div class="row">
						<div class="col-4">
							<% unless !user.photo.attached? %><%= image_tag user.photo, class: "rounded-circle mb-2" %><% end %>
						</div>
						<div class="col-8">
							<%= user.name %>
						</div>
					</div>
				</div>
			<% end %>
		<% end %>
	</div>
</div>
