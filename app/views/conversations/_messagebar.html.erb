<div class="h-100">
  <form id="message_new" class="w-100 h-100 row col-12" method="POST" action="/create_message" data-remote="true" enctype='multipart/form-data'>
      <textarea id="" class="message_body" name="message[body]" class="mt-1 ml-1"></textarea>
      <input id="" class="conversation_id" name="conversation_id" type="hidden" value="">
      <div id="message-document" class="float-right">
        <label for="message_document"><%= fa_icon('paperclip', class: "paperclip pointer") %></label>
        <input id="message_document" name="message[document]" type="file" class="messagefile message_document">
      </div>
      <button id="message-btn" type="submit" class="text-white ml-2 mt-1"><%= fa_icon('paper-plane') %> Send </button>
  </form>
</div>
