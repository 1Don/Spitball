<div class="no-gutters mt-1" style="height: 100%;">
  <div class="border" style="background-color: rgb(242,242,242);">
    <div class="mx-auto">
      <%= form_tag(autocomplete_friends_path, method: "get", class: "my-1 mx-1 text-center", remote: true) do %>
        <%= text_field_tag :autocomplete_friends, nil, placeholder: "Search", class: "w-100 search_field px-3" %>
      <% end %>
    </div>
    <div class="row text-center">
      <div id="convo-btn" class="topright mx-auto col-3 d-block d-sm-none pointer">
        <span><%= fa_icon("comments") %> </span>
      </div>
      <div class="col-4 d-block d-sm-none">

      </div>
      <div id="docu-btn" class="topright mx-auto col-3 d-block d-sm-none pointer">
        <%= fa_icon("file") %>
      </div>
    </div>
  </div>
  <div class="d-none d-sm-block">
    <% @conversations.each do |conversation| %>
      <div data-id="<%= conversation.id %>" id="defaultOpen" value="<%= conversation.id %>" onclick='openConversation(event,"<%= conversation.id %>")' class="border-bottom py-3 w-100 pointer tablinks convo-<%= conversation.id%>">
        <span id="convo-<%= conversation.id %>" class="ml-5 pointer small">
          <% if conversation.sender_id == current_user.id %>
            <%= User.find(conversation.recipient_id).name %>
          <% else %>
            <%= User.find(conversation.sender_id).name %>
          <% end %>
        </span>
      </div>
    <% end %>
  </div>
  <div id="convoz" class="accordion">
    <% @conversations.each do |conversation| %>
      <div data-id="<%= conversation.id %>" id="defaultOpen" value="<%= conversation.id %>" onclick='openConversation(event,"<%= conversation.id %>")' class="border-bottom py-3 w-100 pointer tablinks convo-<%= conversation.id%>">
        <span id="mini-convo-<%= conversation.id %>" class="ml-5 pointer small">
          <% if conversation.sender_id == current_user.id %>
            <%= User.find(conversation.recipient_id).name %>
          <% else %>
            <%= User.find(conversation.sender_id).name %>
          <% end %>
        </span>
      </div>
    <% end %>
  </div>
</div>
