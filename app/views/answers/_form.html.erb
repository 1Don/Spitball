<%= form_for([@discussion, @answer]) do |f| %>
	<div class="col-12 mx-auto row">
	      <div class="col-4">
	        <%= f.submit 'Comment', class: 'text-center btn btn-primary btn-sm', id: "btn" %>
	   	  </div>
	      <div class="col-8">
	        <%= f.text_field :content, class: 'form-control form-control-sm form-field' %>
	        <%= f.hidden_field :discussion_id %>
	        <%= f.hidden_field :parent_id, class: "hid-field" %>
	      </div>
	</div>
<% end %>