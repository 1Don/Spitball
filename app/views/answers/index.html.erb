<div class="col-12 col-md-6">
	<div>
		<%= render 'discussions/panel' %>
	</div>
	<div class="h5 mt-3 small">
		<% if current_user == @discussion.user && !@discussion.resolved %>
			Use the <%= fa_icon('check') %> to select the correct answer!
		<% elsif current_user == @discussion.user && @discussion.resolved %>
			If the answer you selected wasn't right, use the <%= fa_icon('question') %> to open the question again
		<% elsif current_user != @discussion.user && !@discussion.resolved %>
			This question needs to be answered!
		<% elsif current_user != @discussion.user && @discussion.resolved %>
			Even though this question has been answered, feel free to join in the conversation!
		<% end %>
	</div>
	<div class="card">
		<div class="card-header">
			<%= form_for [@discussion, @discussion.answers.build], class: 'form-inline', remote: true  do |f| %>
			<%= f.hidden_field :discussion_id %>
			<%= f.label :content, class: 'sr-only' %>
			<%= f.text_field :content, class: 'form-control w-50 mr-2 d-inline', placeholder: 'Have any suggestions?' %>
			<%= f.submit 'Answer', class: 'commentBtn d-inline', disable_with: 'Sending' %>
		  <% end %>
		</div>
	</div>
	<% if @solution %>
	<div class="list-group card list-group-flush mt-2 mb-2">
		<div class="row pb-2">
			<div class="col-2 mt-2 border-right text-center d-inline">
				<%= link_to user_path(@solution.user) do %>
					<%= image_tag @solution.user.photo(:thumb), class: "w-75" %>
				<% end %>
			</div>

			<div class="col-7 small float-right d-inline mt-2 ml-2">
				<%= @solution.content %>
			</div>
			<div class="col-2">
				<%= link_to solved_discussion_path(@discussion, answer_id: @solution.id), class: "profile-link", method: :patch, remote: true do %>
					<span><%= fa_icon('question') %></span>
				<% end %>				
			</div>
		</div>
	</div>

	<% end %>

	<div class="list-group list-group-flush">
		<%= answers_tree_for @replies %>
	</div>

</div>
