<div class="col-12">
	<div class="row">
		<div class="col-4 d-none d-md-block">
			<%= render "discussions/sidebar" %>
		</div>

		<div class="col-xs-12 col-sm-12 col-md-8">
			<div>
				<%= render 'discussions/panel' %>
			</div>

			<div class="card">
				<div class="card-header">
					<%= form_for [@discussion, @discussion.answers.build], class: 'form-inline', remote: true  do |f| %>
					<%= f.hidden_field :discussion_id %>
					<%= f.label :content, class: 'sr-only' %>
					<span class="d-none d-sm-block"><%= f.text_field :content, class: 'form-control mr-2 d-inline ', placeholder: 'Have any suggestions?' %></span>
					<span class="d-block d-sm-none"><%= f.text_field :content, class: 'form-control mr-2 d-inline', placeholder: 'Have any suggestions?' %></span>		
					<%= f.submit 'Answer', class: 'newbutton mx-auto', disable_with: 'Sending' %>
				  <% end %>
				</div>
			</div>
		
			<div class="list-group list-group-flush">
				<%= answers_tree_for @replies %>
			</div>

		</div>
	</div>
</div>
