<%= form_for([@wad, @comment], class: "", remote: true) do |f| %>
	<div class="mb-4 row col-12">
	      <div class="col-md-10 col-xs-2 mt-1">
	        <%= f.text_field :content, class: 'form-control form-control-sm form-field' %>
	        <%= f.hidden_field :wad_id %>
	        <%= f.hidden_field :parent_id, class: "hid-field" %>
	      </div>
	      <div class="col-2 d-none d-sm-block">
	        <%= f.submit 'Comment', class: 'text-center comment-btn btn-sm', id: "btn" %>
	   	  </div> 	   	  	      
	</div>
	<div class="col-2 d-block d-sm-none mx-auto">
		<%= f.submit 'Comment', class: 'text-center comment-btn btn-sm mx-auto', id: "btn" %>
	</div>		
<% end %>