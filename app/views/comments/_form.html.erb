<div class="row">
  <div class="col-12 col-md-6 mx-auto">
    <%= form_for([@wad, @comment]) do |f| %>
      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_area :content, class: 'form-control' %>
        <%= f.hidden_field :wad_id %>
        <%= f.hidden_field :parent_id %>
      </div>

      <%= f.submit 'Comment', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
