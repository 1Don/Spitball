console.log("downvote script running");
$("#like-<%= @comment.id %>").html((parseInt($("#like-<%= @comment.id %>").html())-1).toString());
if ($("#like-<%= @comment.id %>").attr("data-check") == "parent") {
	$('#vote-span-<%= @comment.id %>').html('<%= link_to fa_icon("chevron-circle-up", class: "profile-link"), wad_comment_like_path(@wad, @comment), method: :put, remote: true %>')
} else if ($("#like-<%= @comment.id %>").attr("data-check") == "child") {
	$('#vote-span-<%= @comment.id %>').html('<%= link_to fa_icon("caret-up", class: "profile-link"), wad_comment_like_path(@wad, @comment), method: :put, remote: true %>')
}