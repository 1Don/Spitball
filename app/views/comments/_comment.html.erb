<div class="row">
	<div class="col-3 border-right">
		<div>
			<%= image_tag comment.user.photo(:thumb) %>
		</div>
		<div>
			@<%= comment.user.name %>
		</div>		
	</div>

	<div class="col-9 small">
		<div class="col-12">
			<%= comment.content %>
		</div>
		<div class="col-12 text-right row mt-4">

			<div class="col-4" id='wad' data-wad="<%= @wad.id %>">
			</div>

			<div class="col-8">
				<span id="btn-<%= comment.id %>" data-id="<%= comment.id %>" onclick='execReply("<%= comment.id %>");'><%= fa_icon('comment') %></span>
				<% if current_user == comment.user %>
					<%= link_to fa_icon("trash", class: "profile-link"), [comment.wad , comment], method: :delete %>
				<% end %>
			</div>
		</div>
	</div>
</div>
<div id="cmt-rply-form-<%= comment.id %>" class="cmt-rply-form">
	<%= render 'form' %>
</div>