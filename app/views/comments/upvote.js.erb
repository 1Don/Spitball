console.log("upvote script running")
$("#like-<%= @comment.id %>").html((parseInt($("#like-<%= @comment.id %>").html())+1).toString());
if ($("#like-<%= @comment.id %>").attr("data-check") == "parent") {
	$('#vote-span-<%= @comment.id %>').html('<%= link_to fa_icon("chevron-circle-down", class: "profile-link"), wad_comment_dislike_path(@wad, @comment), method: :put, remote: true %>')
} else if ($("#like-<%= @comment.id %>").attr("data-check") == "child") {
	$('#vote-span-<%= @comment.id %>').html('<%= link_to fa_icon("caret-down", class: "profile-link"), wad_comment_dislike_path(@wad, @comment), method: :put, remote: true %>')
}