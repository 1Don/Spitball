<div class="row col-12 mx-auto px-2">
	<div class="col-md-2 mt-5 d-none d-sm-block">
		<%= render 'wads/sidebar' %>
	</div>
	<div class="col-md-7 mt-5">
		<%= render 'wads/panel' %>
		<div class="mt-4">
			<% if @wad.comments.exists? %>
				<div id="daddy-comment-div" class="card border-bottom-0">
					<%= comments_tree_for @replies %>
				</div>
			<% end %>
		</div>
	</div>

	<div class="col-md-3">
		<div class="mt-5">
			<h6 class="text-center">Meet <%= @wad.user.name %>:</h6>
			<%= render "users/user", user: @wad.user %>
		</div>
		<h6 class="mt-5 mb-2 text-center"> Related Wads</h6>
		<%= render 'wads/side_wad' %>
	</div>
</div>
<div id="fb-root"></div>
<%= render 'comments/comment_modal' %>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = 'https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v3.1&appId=204039150277736&autoLogAppEvents=1';
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
