<div class="row">
	<div class="col-3">

	</div>
	<div class="">
		<div class="card border-0 shadow-sm">
			<%= render 'wads/panel' %>
		</div>
		<div id="" class="card border-0 shadow-sm br-5 mt-2">
			<div class="mx-1 my-2">
				<div class="col-12">
					<%= form_for [@wad, @wad.comments.build], html: { class: 'form-inline' }, remote: true do |f| %>
						<%= f.hidden_field :wad_id %>
						<%= f.text_area :content, id: "parent-cmt-field", class: 'form-control comment-text w-100 comment-reply-form autoExpand', placeholder: 'What are your thoughts on this idea?', onkeyup: "activeBox(0, true)" %>
				</div>
				<div class="col-12 d-none d-sm-block">
					<div class="row">
					<div class="col-10">

					</div>
					<div class="col-2 py-2 small">
						<div class="">
							<%= f.submit "COMMENT", id: "parent-cmt-bt", class: 'createBtn pointer br-5 w-100 text-white small', disable_with: 'Sending' %>
						</div>
					</div>
					</div>
				</div>
				<div class="d-block d-sm-none col-12">
					<%= f.submit class: 'createBtn pointer br-5 w-100 text-white small', disable_with: 'Sending' do %>
						<%= fa_icon('comment') %>
					<% end %>
					<% end %>
				</div>
			</div>
		</div>
		<div class="card border-0 shadow-sm mt-3">
			<% if @wad.comments.exists? %>
				<div id="daddy-comment-div" class=" border-bottom-0">
					<div id="new-parent" class="">
					</div>
					<%= comments_tree_for @replies %>
				</div>
			<% end %>
		</div>
	</div>
</div>
<div id="fb-root"></div>
<%= render 'collaboration_requests/modal' %>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = 'https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v3.1&appId=204039150277736&autoLogAppEvents=1';
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
