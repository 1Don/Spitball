<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <div id="" class="mb-3">
          <div class="row">
            <div class="col-10 pr-0">
              <%= form_for [@wad, @wad.comments.build], html: { class: 'form-inline' }, remote: true do |f| %>
                <%= f.hidden_field :wad_id %>
                <%= f.text_area :content, class: 'form-control comment-text w-100', placeholder: 'What are your thoughts on this idea?' %>
            </div>
            <div class="col-2 pl-0">
                <%= f.submit 'Reply', class: 'comment-btn pointer br-5', disable_with: 'Sending' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>
