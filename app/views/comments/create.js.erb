if ("<%= @comment.parent_id %>" == "") {
	document.location.reload();
} else {
	const nameAndContent =`<div id="cmt-<%= @comment.id %>" class="small col-10 mx-auto row border-bottom">
													<div class="col-10 mt-2 mb-1 small">
														<%= link_to @comment.user.name, user_path(@comment.user) %><% if @comment.user.occupation && @comment.user.occupation != "" %> · <%= @comment.user.occupation %><% end %> · <%= @comment.user.points %>
														<div class="col-12 mb-1 mt-1">
															<%= @comment.content %>
														</div>
													</div>
													<div class="mt-3 col-1">
														<div class="col-1 dropdown pointer">
											        <span class="" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
											          <%= fa_icon('ellipsis-v') %>
											        </span>
											        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
											          <span class="dropdown-item"><%= link_to fa_icon('flag', class: " profile-link pointer") + "  Flag content", wad_comment_flag_path(@comment.wad, @comment), remote: true, class: "profile-link" %></span>
																<% if current_user.voted_down_on?(@comment) || !current_user.voted_for?(@comment) %>
																	<span class="dropdown-item" id="vote-span-<%= @comment.id %>"><%= link_to image_tag('thumbs-up-regular.svg', class: "icon-pic") + " Like!", wad_comment_like_path(@comment.wad, @comment), method: :put, remote: true, class: "profile-link" %></span>
																<% else %>
																	<span class="dropdown-item" id="vote-span-<%= @comment.id %>"><%= link_to image_tag('thumbs-up-orange.svg', class: "icon-pic") + " Like!", wad_comment_dislike_path(@comment.wad, @comment), method: :put, remote: true, class: "profile-link" %></span>
																<% end %>
																<span class="profile-link child-cmt pointer dropdown-item" onclick='secondaryReply("<%= @comment.root.id %>", "<%= @comment.id %>", "<%= @comment.user.name %>");'><%= image_tag('comment-dots-regular.svg', class: "icon-pic") + " Comment" %></span>
																<% if current_user == @comment.user %>
																	<%= link_to fa_icon("trash", class: "dropdown-item profile-link pointer"), wad_comment_path(@comment.wad, @comment), method: :delete, remote: true %>
																<% end %>
											        </div>
											      </div>
													</div>
												</div>`
	$('#new-cmt-<%= @comment.root.id %>').prepend(nameAndContent)
	$('.form-field').val("")
	$('.hid-field').attr('value', "<%= @comment.root.id %>");
}
