<div class="row col-12">
  <div class="bg-primary col-2">
    <div class="align-middle mt-5">
      dasv
    </div>
  </div>

  <div class="row col-8">
    <div class="col-10 mx-auto">
      <div class="row card mt-3">
        <div class="col-12 form-control-sm small">
          <div class="row">
                <div class="form-group col-6">
                  <%= form_for @wad, html: { multipart: true } do |f| %>
                      <%= f.label :category %>
                      <%= f.select :category,
                                  options_for_select(
                                    [
                                      "B2B Tech",
                                      "Consumer Products",
                                      "Events",
                                      "Media and Entertainment",
                                      "Consumer Tech",
                                      "Social Entrepreneurship",
                                      "Location Specific",
                                      "Avant-garde"
                                      ]
                                  ),
                                  {},
                                  class: 'form-control' %>
                </div>
                <div class="col-6">  
                   <%= f.label :tags, "Tags" %>
                   <%= f.text_field :tags, placeholder: "seperate using ', '", class: 'form-control'   %> 
                </div>
          </div>

            <div class="form-group">
              <%= f.label :problem_state, "Problem Statement" %>
              <%= f.text_field :problem_state, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :long_form, "The Pitch" %>
              <%= f.text_area :long_form, class: 'form-control', style: "resize: none;", :rows => 8 %>
            </div>
            <div class="row">
              <div class="form-group col-5">
                <%= f.label :image, "Images" %>
                <%= f.file_field :image, class: 'form-control-file' %>
              </div>
              <div class="col-5">
                <%= f.submit "Submit Wad", class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-2 bg-primary">
    
  </div>
</div>
