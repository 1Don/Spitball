<h1> Post a Wad now! </h1>

    <%= form_for @wad do |f| %>

      <%= f.label :short_form, "Short Form" %>
      <%= f.text_field :short_form, class: 'form-control' %>

      <%= f.label :long_form, "Long Form" %>
      <%= f.text_field :long_form, class: 'form-control' %>

      <%= f.label :problem_state, "Problem" %>
      <%= f.text_field :problem_state, class: 'form-control' %>

      <%= f.label :category, "Category" %>
      <%= f.text_field :category, class: 'form-control' %>

      <%= f.submit "Submit Wad", class: "btn btn-primary" %>
    <% end %>