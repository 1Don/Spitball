<div class="col-md-8 col-12 row text-center">

	<div class="col-12 text-right">
		<% if current_user == wad.user %>
	      <span id="trash-<%= wad.id %>" class="trash mr-5"> <%= link_to fa_icon("trash", class: "profile-link mr-5"), wad_path(wad), method: :delete, remote: true%></span>
	    <% end %>
	    <% if current_user.voted_down_on? wad %>
	    	<span id="wad-vote-span-<%= wad.id %>"><%= link_to image_tag('thumbs-up-regular.svg', class: "icon-pic"), like_wad_path(wad), method: :put, remote: true %></span>
	   	<% elsif !current_user.voted_for? wad %>
	    	<span id="wad-vote-span-<%= wad.id %>"><%= link_to image_tag('thumbs-up-regular.svg', class: "icon-pic"), like_wad_path(wad), method: :put, remote: true %></span>	   		
	    <% else %>
	    	<span id="wad-vote-span-<%= wad.id %>"><%= link_to image_tag('thumbs-up-regular.svg', class: "icon-pic"), dislike_wad_path(wad), method: :put, remote: true %></span>
	    <% end %>
	     	<span data-check="<%= current_user.voted_for? wad %>" id="wad-like-<%= wad.id %>" class="nowrap"> <%= wad.get_upvotes.size %> votes </span>
    </div>
</div>
