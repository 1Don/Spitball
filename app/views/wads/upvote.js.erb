console.log("upvote script running")
if ($(".wad-like-<%= @wad.id %>").attr('data-check') == "false"){
	$('.wad-vote-span-<%= @wad.id %>').html('<%= link_to image_tag("thumbs-up-orange.png", class: "png-icon"), dislike_wad_path(@wad), method: :put, remote: true %>')
	$(".wad-like-<%= @wad.id %>").html((parseInt($("#wad-like-<%= @wad.id %>").html())+1).toString());
	$(".wad-like-<%= @wad.id %>").attr('data-check', 'true')
} else if($(".wad-like-<%= @wad.id %>").attr('data-check') == "panel") {
	var like_html = `
		<%= link_to dislike_wad_path(@wad), method: :put, remote: true do %>
			<button type="button" name="button" class="comment-btn pointer br-5">
				<%= fa_icon('caret-up 2x') %> Upvote 
				<span>
					<%= @wad.get_upvotes.count %>
				</span>
			</button>
		<% end %>
	`
	$(".wad-like-<%= @wad.id %>").html(like_html)
}
