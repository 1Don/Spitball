<div class="row">	
	<div class="col-6">	
		<% if @wads.first %>
			<% if @wads.order('created_at DESC') == @all_wads.order('created_at DESC') %>
				<span class="h4 font-weight-light d-none d-sm-block">
					<% if current_user %> Welcome back, <%= current_user.first_name %>!
					<% else %> Welcome back!<% end %>
				</span>
				<span class="h4 font-weight-light d-block d-sm-none">
					Hello <%= current_user.first_name %>!
				</span>
			<% else %>
				<span class="h2 font-weight-light">
					<%= @wads.first.category %>
				</span>		
			<% end %>
		<% else %>
			NEEDS WADS
		<% end %>
	</div>
	<div class="col-5">
		<%= button_to "Gotta BIG Idea?", new_wad_path, class: "profile-link comment-btn", method: :get %>
	</div>
</div>