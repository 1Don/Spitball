<div style="border-radius: 10px;" class="card shadow-sm">
  <div style="background-color: #2a3435; border-radius: 10px 10px 0px 0px; height: 55px;" class="card-header text-center text-white">
    <div class="row mt-1">
      <div id="new-wad-btn" class="col-6 border-right nav-btn">
          New Wad
      </div>
      <div id="menu-btn" class="col-6 nav-btn">
          Menu
      </div>
    </div>
  </div>
  <div id="wad-new-form" class="card-body">
    <%= form_for @wad, html: { multipart: true } do |f| %>

    <%= f.text_field :problem_state, placeholder: "Problem Statement", class: 'form-control form-control-sm col-11 mx-auto mt-3 mb-2 wad-form-item'  %>

    <%= f.select :category,
              options_for_select(
                [
                  "B2B Tech",
                  "Consumer Products",
                  "Events",
                  "Media and Entertainment",
                  "Consumer Tech",
                  "Social Entrepreneurship",
                  "Location Specific",
                  "Avant-garde"
                  ]
              ),
              {},
              class: 'form-control form-control-sm col-11 mx-auto mb-2 wad-form-item' %>

    <%= f.text_field :tags, placeholder: "seperate using ', '", class: 'form-control form-control-sm col-11 mx-auto mb-2 wad-form-item'  %>


    <%= f.text_area :long_form, placeholder: "The Pitch",class: 'form-control form-control-sm col-11 mx-auto mb-2 ', style: "resize: none;", :rows => 8 %>

    <%= f.file_field :image, class: 'form-control-file pl-5 col-11 mx-auto mb-2' %>

    <%= f.submit "Spitball", class: "theme-btn ml-5" %>
    <% end %>
  </div>
  <div id="nav-menu" class="card-body">
    <div>
      News? Messages?
    </div>
  </div>
</div>