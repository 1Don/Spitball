<div class="card col-12 mb-3">
	<div class="card-body">
		<div class="row">
			<div class="col-3 mt-3">
				<%= image_tag @wad.image.url(:medium), class: 'img-fluid' %>
			</div>

			<div class="col-9 small mt-3">
				<h6><%= @wad.problem_state %></h6>
				<%= @wad.long_form %>
			</div>


		</div>
	</div>

	<div class="card-body row">

		<div class="col-4 text-left">
			@<%= link_to @wad.user.name, user_path(@owner) %>
		</div>
		
		<%= render 'wads/actions', wad: @wad %>

	</div>
</div>
