<div class="card mb-3 panel-div" style="border-radius: 10px;">
	<div class="border-bottom text-white" style="background-color: rgb(0,109,181);">
		<div class="col-1 dropdown dropleft float-right ">
			<span class="pointer" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
				<%= fa_icon('ellipsis-v', class: "icon-text") %>
			</span>
			<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
				<span class="dropdown-item"><%= link_to fa_icon('flag', class: "profile-link pointer") + " Flag content", flag_wad_path(@wad), remote: true, class: "profile-link" %></span>
				<% if current_user == @wad.user %>
				<span class="dropdown-item "><%= link_to fa_icon("trash", class: "profile-link pointer") + " Remove Wad", wad_path(@wad), method: :delete, remote: true, class: "profile-link" %></span>
				<% end %>
			</div>
		</div>
		<div class="col-1 dropdown dropright float-right mr-4">
			<span class="pointer" id="shareDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
				<%= fa_icon('share-alt', class: "icon-text") %>
			</span>

			<div class="dropdown-menu" aria-labelledby="shareDropdown">
				See what your friends think about this idea!
				<span class="dropdown-item">
					<a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-text="<%= @wad.user.name %> just had a new <%= @wad.category %> idea. Check it out on Spitball! https://spitball.io<%= root_path(type: "yeo") %>" data-url="<%= root_path %>" data-show-count="false">Tweet</a><script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
				</span>
				<span class="dropdown-item">
					<!-- <div class="fb-share-button" data-href="<%= wad_comments_path(@wad) %>" data-layout="button" data-size="small" data-mobile-iframe="true"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2Fplugins%2F&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">Share</a></div> -->
				</span>
			</div>
		</div>
	</div>
	<div class="card-body">
		<div class="row">
			<div class="col-md-2 col-xs-4">
	            <% if !@wad.image.attached?  %>
	              <%= image_tag "#{@wad.category}.png", class: 'img-fluid rounded d-none d-sm-block' %>
	              <%= image_tag "#{@wad.category}.png", style: "width: 200px;" , class: 'img-fluid rounded mx-auto d-block d-sm-none' %>
	            <% else %>
	              <%= image_tag @wad.image, class: 'd-none d-sm-block img-fluid border border-light', style: "width: 150px; height: 100px; border-radius: 5px; border: solid grey;" %>
	              <%= image_tag @wad.image, class: 'd-block d-sm-none mx-auto img-fluid border border-lighte' %>
	            <% end %>
			</div>

			<div class="col-md-10 small text-justify">
		        <h6 class="mt-3 d-none d-md-block"><%= @wad.problem_state %></h6>
		        <h6 class="mt-1 text-center d-block d-sm-none"><%= @wad.problem_state %></h6>
		        <p class="small d-block d-sm-none"><%= simple_format(@wad.long_form).gsub(URI.regexp, '<a href="\0">\0</a>').html_safe %></p>
			</div>
		</div>
	</div>
	<div class="container mb-1 d-none d-sm-block">
		<div class="row">
			<div class="col-1 ml-3">
				<% if current_user == @wad.user %>
					<span class="external-link"><%= fa_icon('external-link', class: "pointer") %></span>
				<% elsif @wad.link.present? %>
					<span id=""><%=link_to fa_icon('external-link', class: "pointer"), @wad.link, target: "_blank" %></span>
				<% end %>
			</div>
			<div class="col-6">
				<% if current_user == @wad.user %>
					<form method="POST" action="/wads/<%= @wad.id %>/add_link">
						<span class="link-field"><input name="link" placeholder="<%= @wad.link %>" class="br-5"/><span data-toggle="tooltip" data-placement="right" title="Add a URL if you've started prototyping (press ENTER when finished)." class="question-marker-ps ml-1"><%= fa_icon('question') %></span></span>
					</form>
				<% end %>
			</div>
			<div class="col-4 wad-like-<%= @wad.id %>" data-check="panel">
				<% if !current_user.liked? @wad %>
					<%= link_to like_wad_path(@wad), method: :put, remote: true do %>
					<button type="button" name="button" class="comment-btn-alt pointer br-5">
						<%= fa_icon('caret-up 2x') %> Upvote <%= @wad.get_upvotes.count %>
					</button>
					<% end %>
				<% else %>
					<%= link_to dislike_wad_path(@wad), method: :put, remote: true do %>
					<button type="button" name="button" class="comment-btn pointer br-5">
						<%= fa_icon('caret-up 2x') %> Upvote
						<span>
							<%= @wad.get_upvotes.count %>
						</span>
					</button>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
	<div class="container mb-1 d-block d-sm-none">
		<div class="row no-gutters">
			<div class="col-1">
				<% if current_user == @wad.user %>
					<span class="external-link"><%= fa_icon('external-link', class: "pointer") %></span>
				<% elsif !@wad.link.nil? %>
					<span id=""><%=link_to fa_icon('external-link', class: "pointer"), @wad.link, target: "_blank" %></span>
				<% end %>
			</div>
			<div class="col-5">
				<% if current_user == @wad.user %>
					<form method="POST" action="/wads/<%= @wad.id %>/add_link">
						<input name="link" placeholder="<%= @wad.link %>" class="br-5 link-field w-100"/>
					</form>
				<% end %>
			</div>

			<div class="col-6 wad-like-<%= @wad.id %>" data-check="panel">
				<% if !current_user.liked? @wad %>
					<%= link_to like_wad_path(@wad), method: :put, remote: true do %>
					<button type="button" name="button" class="comment-btn-alt pointer br-5">
						<%= fa_icon('caret-up 2x') %> <span class="align-text-top">Upvote</span>
						<span>
							<%= @wad.get_upvotes.count %>
						</span>
					</button>
					<% end %>
				<% else %>
					<%= link_to dislike_wad_path(@wad), method: :put, remote: true do %>
					<button type="button" name="button" class="comment-btn pointer br-5">
						<span class="small">
							<%= fa_icon('caret-up 2x', class: "") %> Upvote
						</span>
						<span class="small">
							<%= @wad.get_upvotes.count %>
						</span>
					</button>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
</div>
