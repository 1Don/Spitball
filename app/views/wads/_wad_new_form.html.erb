<div class="row form-group">
      <div class="col-12 text-center">
        <%= form_for @wad, html: { multipart: true } do |f| %>
            <%= f.label :category %>
            <%= f.select :category,
                        options_for_select(
                          [
                            "Technology and Apps",
                            "Finance and B2B",
                            "Media and Entertainment",
                            "Non-profit and Social Entrepreneurship",
                            "Hardware and Gadgets",
                            "Events and Lifestyle",
                            "Avant-garde"
                            ]
                        ),
                        {},
                        class: 'form-control form-control-sm' %>
      </div>
</div>

  <div class="form-group text-center">
    <%= f.label :problem_state, "Call to Action/Problem Statement" %><span data-toggle="tooltip" data-placement="right" title="Frame you idea in terms of the problem it is solving, or the process/product it is improving (100 chars)."class="pl-1 question-marker-ps"><%= fa_icon('question') %></span>
    <%= f.text_field :problem_state, class: 'form-control form-control-sm', id: "focus-field"  %>
  </div>

  <div class="form-group text-center">
    <%= f.label :long_form, "The Pitch" %><span data-toggle="tooltip" data-placement="right" title="Get into a little detail about your solution. What is the target demographic it's going to serve? How will it serve them? Consider how your idea is different than other similar products currently on the market and why someone would pick the product of your idea over an existing product (5000 chars)." class="pl-1 question-marker-ps"><%= fa_icon('question') %></span>
    <%= f.text_area :long_form, class: 'form-control form-control-sm', style: "resize: none;", :rows => 8 %>
  </div>
  <div class="row mx-auto">
    <div class="form-group col-md-6 col-xs-9 ml-5 upload-div mx-auto text-center">
      <span id="fileName"><%= f.label :image, fa_icon('upload') + " Upload an image", class: "mx-auto pointer mt-2" %></span>
      <%= f.file_field :image, class: 'form-control-file pl-5 col-11 mx-auto mb-2 inputfile' %>
    </div>
    <div class="col-md-5 col-xs-12">
      <!-- I want to use logo's text inside of button -->
      <%= f.submit "Spitball", class: "wadnewbutton d-none d-md-block" %>
      <%= f.submit "Spitball", class: "wadnewbutton mx-auto d-block d-sm-none" %>
    </div>
  </div>
<% end %>
