<div class="col-12 col-md-9">
	<div class="row">
		<%# The display for all wads%>
			
				<div class="col-12 d-flex align-items-center mb-3">
					
					<span class="h4 font-weight-light">
						Welcome back, <%= current_user.first_name %>!
					</span>
					<%= button_to "Let's get it", new_wad_path, :class => "newbutton", :method => :get  %>
				</div>	
				<div class="col-xs-12 col-md-9 mb-4">
					<% @wads.each do |wad| %>
						<%= render wad %>
					<% end %>
				</div>
			</div>

	</div>
</div>
