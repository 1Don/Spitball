<div class= "page">
<h1> Wads </h1>
<h2>
	<%= button_to new_wad_path, method: :get do %>
		Get Spitballing
	<% end %>
</h2>

<%= render "sidebar" %>

<% @wads.each do |wad| %>
	<%= link_to wad_comments_path(wad) do %>
		<ul class="wad">
			<%= wad.category %>: 
			<%= wad.short_form %>
		</ul>
	<% end %>
	<%= button_to like_wad_path(wad), method: :put do %>
		 Upvote
		 <%= wad.get_upvotes.size %>
	<% end %>
<% end %>
<%= will_paginate @wads %>
</div>
</div>